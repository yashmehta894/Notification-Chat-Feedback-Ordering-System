<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
         >

        <ImageView
            android:id="@+id/imageView_for_suggestion"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/thought_256" />

        <TextView
            android:id="@+id/caption_for_food"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:padding="15dp"
            android:text="Want ONLY chocolate cake on your birthday? Or you've noticed something unusual in your teammates? Tell us and let's get working on it together!" />

        <TextView
            android:id="@+id/text_for_Problem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:hint="Enter Your Problem"
            android:text="What Ails You?"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_for_problem"
            android:layout_width="275dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:background="@drawable/rectangle"
            android:hint="Enter Your Problem"
            android:padding="10dp" />

        <TextView
            android:id="@+id/text_for_improve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:text="How can we improve?"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_for_improve"
            android:layout_width="275dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:background="@drawable/rectangle"
            android:hint="Enter text"
            android:padding="10dp" />

        <TextView
            android:id="@+id/text_for_anything_else"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:text="Anything Else ?"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_for_anything_else"
            android:layout_width="275dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:background="@drawable/rectangle"
            android:hint="Enter Text"
            android:padding="10dp" />

        <TextView
            android:id="@+id/text_for_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:text="What is your Email?"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_for_mail"
            android:layout_width="275dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:background="@drawable/rectangle"
            android:hint="Enter your Email"
            android:padding="10dp" />

        <TextView
            android:id="@+id/text_for_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:text="What is your phone number?"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_for_phone"
            android:layout_width="275dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:background="@drawable/rectangle"
            android:hint="Enter your phone number"
            android:padding="10dp" />

        <Button
            android:id="@+id/buttontosubmit"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@android:color/black"
            android:clickable="true"
            android:enabled="true"
            android:text="SUBMIT"
            android:textColor="@android:color/white" 
           />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >
        </TextView>
    </LinearLayout>

</ScrollView>